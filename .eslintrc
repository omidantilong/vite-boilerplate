{
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier"
  ],
  "ignorePatterns": [
    "dist",
    "node_modules"
  ],
  "plugins": [
    "eslint-plugin-import"
  ],
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "react/react-in-jsx-scope": 0,
    "max-len": [
      "warn",
      {
        "ignoreUrls": true,
        "code": 80
      }
    ],
    "prefer-template": "off",
    "no-multiple-empty-lines": [
      1,
      {
        "max": 1,
        "maxEOF": 1
      }
    ],
    "no-unused-vars": [
      "warn"
    ],
    "no-var": 1,
    "camelcase": 1,
    "no-new-wrappers": 1,
    "no-nested-ternary": 1,
    "no-template-curly-in-string": 1,
    "no-self-compare": 1,
    "import/prefer-default-export": 0,
    "import/newline-after-import": [
      "warn",
      {
        "count": 1
      }
    ],
    "func-names": [
      1,
      "as-needed"
    ],
    "semi": [
      1,
      "never"
    ],
    "semi-style": [
      "error",
      "last"
    ]
  }
}